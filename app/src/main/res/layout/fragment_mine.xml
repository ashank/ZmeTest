<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  tools:context=".ui.fragement.MineFragment">

  <android.support.v7.widget.Toolbar
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/colorPrimary"
    android:elevation="4dp"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    >

    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginRight="15dp"
      android:gravity="center_vertical">

      <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:ellipsize="end"
        android:gravity="center"
        android:maxEms="50"
        android:singleLine="true"
        android:text="我的"
        android:textColor="@color/color_ffffff"
        android:textSize="18sp"/>
    </RelativeLayout>

  </android.support.v7.widget.Toolbar>

  <RelativeLayout
    android:id="@+id/rl_top"
    android:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:layout_below="@+id/toolbar"
    android:layout_height="200dp">

    <ImageView
      android:id="@+id/touxiang"
      app:srcCompat="@drawable/icon__natural_persons"
      android:layout_width="80dp"
      android:layout_marginTop="30dp"
      android:layout_centerHorizontal="true"
      android:layout_height="80dp"/>

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="18sp"
      android:layout_below="@+id/touxiang"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="20dp"
      android:textColor="@color/color_ffffff"
      android:text="植亚汉"/>

  </RelativeLayout>

  <TextView
    android:id="@+id/save"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:textSize="18sp"
    android:gravity="center_vertical"
    android:drawablePadding="8dp"
    android:padding="@dimen/px19"
    android:drawableLeft="@drawable/ic_setting"
    android:layout_below="@+id/rl_top"
    android:textColor="#596032"
    android:text="收藏"/>

  <View
    android:id="@+id/view_line"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_below="@+id/save"
    android:layout_margin="5dp"
    android:layout_height="1px"/>

  <TextView
    android:id="@+id/setting"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:textSize="18sp"
    android:drawablePadding="8dp"
    android:gravity="center_vertical"
    android:drawableLeft="@drawable/ic_tuijian1"
    android:padding="@dimen/px19"
    android:layout_below="@+id/view_line"
    android:textColor="#596032"
    android:text="设置"/>

  <View
    android:layout_below="@+id/setting"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:background="@color/colorPrimary"
    android:layout_height="1px"/>

  <TextView
    android:id="@+id/tv_login"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:layout_weight="1"
    android:visibility="invisible"
    android:layout_marginTop="15dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="60dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:background="@drawable/bg_ffde00_no_fillet"
    android:gravity="center"
    android:text="登录"
    android:textColor="@color/color_333333"
    android:textSize="16sp"/>

</RelativeLayout>