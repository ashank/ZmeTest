<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <!--设置View点击时的背景色-->
        <item name="android:colorControlHighlight">#00BCD4</item>
        <!--设置按钮默认的背景色-->
        <item name="android:colorButtonNormal">#CDDC39</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <!--<item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>-->
        <item name="android:windowBackground">@mipmap/bg</item>
        <item name="android:opacity">opaque</item>
        <item name="android:windowFullscreen">true</item>
      <!--  <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>-->
    </style>

    <style name="NoTitleBarTheme" parent="AppTheme">
        <!--<item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>-->
        <item name="android:opacity">opaque</item>
       <!-- <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>-->
      <!--  <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>-->
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

</resources>
