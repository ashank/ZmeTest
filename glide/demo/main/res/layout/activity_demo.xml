<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  tools:context=".DemoActivity">

  <ImageView
    android:id="@+id/bt3"
    android:src="@color/color_20000000"
    android:layout_width="match_parent"
    android:layout_marginBottom="12dp"
    android:layout_height="0dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintBottom_toTopOf="@id/bt2"/>

  <Button
    android:id="@+id/bt2"
    android:layout_width="0dp"
    android:layout_marginBottom="12dp"
    android:layout_height="wrap_content"
    android:text="Smart刷新  与 RecyclerView 底部加载"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintBottom_toTopOf="@id/bt1"/>

  <Button
    android:id="@+id/bt1"
    android:layout_width="0dp"
    android:layout_marginBottom="12dp"
    android:layout_height="wrap_content"
    android:text="网格列表形式"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintBottom_toTopOf="@id/bt_logout"/>

  <Button
    android:id="@+id/bt_logout"
    android:layout_width="0dp"
    android:layout_marginBottom="12dp"
    android:layout_height="wrap_content"
    android:text="瀑布流刷新加载"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintBottom_toTopOf="@id/bt_share"/>


  <Button
    android:id="@+id/bt_share"
    android:layout_width="0dp"
    android:layout_marginBottom="12dp"
    android:layout_height="wrap_content"
    android:text="listView 刷新 加载"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintBottom_toTopOf="@id/bt_detail_share"/>

  <Button
    android:id="@+id/bt_detail_share"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="添加头部尾部"
    android:layout_marginBottom="12dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    />


</android.support.constraint.ConstraintLayout>